<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="85dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.dashboard.DashboardFragment"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/background" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:layout_constraintVertical_bias="0.1458"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pokepiece" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.1498"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/unk" />

        <Button
            android:id="@+id/buyLegendaryButton"
            android:layout_width="90dp"
            android:layout_height="49dp"
            android:alpha="0.01"
            android:text="Button"
            app:layout_constraintVertical_bias="0.1408"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <ImageView
            android:id="@+id/piecesAncient"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:layout_constraintVertical_bias="0.3240"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pokepiece" />

        <ImageView
            android:id="@+id/prixAncient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.3268"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/piecesAncient"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/unk" />

        <Button
            android:id="@+id/buyAncientButton"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:alpha="0.01"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3198" />



        <ImageView
            android:id="@+id/piecesOffre1"
            android:layout_width="35dp"
            android:layout_height="30dp"
            app:layout_constraintVertical_bias="0.469"
            app:layout_constraintHorizontal_bias="0.198"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/pokepiece" />

        <ImageView
            android:id="@+id/prixOffre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.470"
            app:layout_constraintHorizontal_bias="0.240"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/piecesAncient"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/unk" />

        <Button
            android:id="@+id/buyOffre1Button"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:alpha="0.01"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.43" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>