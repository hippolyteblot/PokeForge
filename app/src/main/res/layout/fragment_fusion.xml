<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fusion"
    tools:context=".ui.fusion.FusionFragment">

    <ImageButton
        android:id="@+id/btn_fusion_local"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_fusion"
        app:layout_constraintBottom_toTopOf="@+id/btn_fusion_remote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <ImageButton
        android:id="@+id/btn_fusion_remote"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/btn_fusionami"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>